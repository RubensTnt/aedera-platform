// Prisma schema — Aedera "clean": elements index + classifications + QTO
// No IFC raw properties persisted.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

//
// --------------------
// Core: Project & Auth
// --------------------
//

model Project {
  id         String    @id @default(cuid())
  name       String
  code       String?   @unique
  createdAt  DateTime  @default(now())
  archivedAt DateTime?

  ifcModels IfcModel[]
  members   ProjectMember[]

  // Domain catalogs
  wbsNodes  WbsNode[]
  suppliers Supplier[]

  // Aedera domain state (optional to query without joins)
  classifications AederaClassification[]

  // Optional: user-defined parameters (non-IFC raw)
  paramDefs               ElementParamDefinition[]
  paramValues             ElementParamValue[]
  paramHistory            ElementParamHistory[]
  classificationHistories ClassificationHistory[]

  @@index([code])
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  name         String?
  createdAt    DateTime @default(now())

  sessions    Session[]
  memberships ProjectMember[]

  platformRole PlatformRole @default(USER)

  // audit
  elementParamHistory   ElementParamHistory[]
  classificationHistory ClassificationHistory[]
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  tokenHash String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model ProjectMember {
  projectId String
  userId    String
  role      ProjectRole

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([projectId, userId])
}

enum PlatformRole {
  PLATFORM_MANAGER
  USER
}

enum ProjectRole {
  OWNER
  ADMIN
  EDITOR
  VIEWER
}

//
// --------------------
// IFC Models & Elements (minimal index)
// --------------------
//

model IfcModel {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  label     String
  fileName  String
  fileKey   String
  size      Int?
  createdAt DateTime @default(now())

  // Minimal element index (modelId + guid)
  elements ModelElement[]

  // Persisted domain + QTO
  classifications AederaClassification[]
  qtos            ElementQto[]

  @@index([projectId])
  @@index([projectId, label])
}

model ModelElement {
  id String @id @default(cuid())

  modelId String
  model   IfcModel @relation(fields: [modelId], references: [id], onDelete: Cascade)

  guid     String // IfcGlobalId
  ifcType  String // e.g. IfcWall
  name     String?
  typeName String?
  category String?

  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  aederaClassification AederaClassification?
  elementQto           ElementQto?

  // allow safe multi-model uniqueness
  @@unique([modelId, guid])
  @@index([modelId, ifcType])
  @@index([guid])
}

//
// --------------------
// Aedera Domain: WBS & Supplier
// --------------------
//

model WbsNode {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  code      String
  name      String
  sortIndex Int    @default(0)

  parentId String?
  parent   WbsNode?  @relation("WbsTree", fields: [parentId], references: [id], onDelete: Cascade)
  children WbsNode[] @relation("WbsTree")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  classifications AederaClassification[]

  @@unique([projectId, code])
  @@index([projectId, parentId])
}

model Supplier {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  name     String
  code     String?
  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  classifications AederaClassification[]

  @@unique([projectId, name])
  @@index([projectId, isActive])
}

//
// --------------------
// Domain view per element (Aedera truth)
// --------------------
//

enum ClassificationSource {
  IFC_IMPORT
  MANUAL
  RULE
}

model AederaClassification {
  id String @id @default(cuid())

  // Link to model & element (composite relation)
  modelId String
  guid    String

  element ModelElement @relation(fields: [modelId, guid], references: [modelId, guid], onDelete: Cascade)
  model   IfcModel     @relation(fields: [modelId], references: [id], onDelete: Cascade)

  // Keep projectId for simpler filtering (denormalized but practical)
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // WBS as FK
  wbsNodeId String?
  wbsNode   WbsNode? @relation(fields: [wbsNodeId], references: [id], onDelete: SetNull)

  // Supplier as FK
  supplierId String?
  supplier   Supplier? @relation(fields: [supplierId], references: [id], onDelete: SetNull)

  // Other codes (upgrade to FK tables later)
  tariffaCode       String?
  pacchettoCode     String?
  materialeCode     String?
  progettazioneCode String?

  source ClassificationSource @default(MANUAL)
  ruleId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([modelId, guid])
  @@index([projectId])
  @@index([projectId, modelId])
  @@index([projectId, wbsNodeId])
  @@index([projectId, supplierId])
}

model ClassificationHistory {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  modelId String
  guid    String

  // old/new snapshots
  oldValueJson Json?
  newValueJson Json?

  source    String   @default("UI")
  changedAt DateTime @default(now())

  changedByUserId String
  changedBy       User   @relation(fields: [changedByUserId], references: [id], onDelete: Restrict)

  @@index([projectId, modelId, guid, changedAt])
}

//
// --------------------
// QTO persisted (computed in viewer once, stored server-side)
// --------------------
//

model ElementQto {
  id String @id @default(cuid())

  modelId String
  guid    String

  element ModelElement @relation(fields: [modelId, guid], references: [modelId, guid], onDelete: Cascade)
  model   IfcModel     @relation(fields: [modelId], references: [id], onDelete: Cascade)

  // MVP: store computed measures as JSON
  qtoJson Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([modelId, guid])
  @@index([modelId])
}

//
// --------------------
// Optional: Aedera user-defined params (non IFC raw)
// --------------------
//

enum ElementParamType {
  STRING
  NUMBER
  BOOLEAN
  ENUM
  DATE
  JSON
  SUPPLIER
}

model ElementParamDefinition {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  key   String
  label String
  type  ElementParamType

  optionsJson Json?
  isActive    Boolean @default(true)
  isRequired  Boolean @default(false)
  isReadOnly  Boolean @default(false)
  isMulti     Boolean @default(false)

  ifcClassFilter String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  values  ElementParamValue[]
  history ElementParamHistory[]

  @@unique([projectId, key])
  @@index([projectId, isActive])
}

model ElementParamValue {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  modelId String
  guid    String

  definitionId String
  definition   ElementParamDefinition @relation(fields: [definitionId], references: [id], onDelete: Cascade)

  valueJson Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([modelId, guid, definitionId])
  @@index([projectId, definitionId])
  @@index([modelId])
}

model ElementParamHistory {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  modelId String
  guid    String

  kind String // "CLASSIFICATION" / "PARAM" ecc. (puoi trasformarlo in enum più avanti)

  definitionId String?
  definition   ElementParamDefinition? @relation(fields: [definitionId], references: [id], onDelete: SetNull)

  oldValueJson Json?
  newValueJson Json?

  changedByUserId String
  changedBy       User   @relation(fields: [changedByUserId], references: [id], onDelete: Restrict)

  source    String   @default("UI")
  changedAt DateTime @default(now())

  @@index([projectId, modelId, guid, changedAt])
  @@index([projectId, kind, changedAt])
}
