generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id        String   @id @default(cuid())
  name      String
  code      String?  @unique
  createdAt DateTime @default(now())

  datiWbs ElementDatiWbs[]

  ifcModels IfcModel[]

  members ProjectMember[]

  archivedAt DateTime?

  @@index([code])
}

model IfcModel {
  id        String  @id
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  label     String
  fileName  String
  fileKey   String
  size      Int?
  createdAt DateTime @default(now())

  @@index([projectId])
}

model ElementDatiWbs {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id])

  ifcGlobalId String // GUID IFC dell'elemento
  modelLabel  String? // opzionale: nome del modello IFC di riferimento

  // campi DATI_WBS
  wbs0  String?
  wbs1  String?
  wbs2  String?
  wbs3  String?
  wbs4  String?
  wbs5  String?
  wbs6  String?
  wbs7  String?
  wbs8  String?
  wbs9  String?
  wbs10 String?

  tariffaCodice   String?
  pacchettoCodice String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Non vogliamo duplicati per lo stesso elemento di un progetto
  @@unique([projectId, ifcGlobalId])
  @@index([projectId])
  @@index([ifcGlobalId])
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String
  name         String?
  createdAt    DateTime  @default(now())

  sessions     Session[]
  memberships  ProjectMember[]

  platformRole PlatformRole @default(USER)
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  tokenHash String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model ProjectMember {
  projectId String
  userId    String
  role      ProjectRole

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([projectId, userId])
}

enum PlatformRole {
  PLATFORM_MANAGER
  USER
}

enum ProjectRole {
  OWNER
  ADMIN
  EDITOR
  VIEWER
}






