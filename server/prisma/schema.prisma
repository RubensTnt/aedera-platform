// prisma/schema.prisma  (ALLINEATO a server-src-003)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

//
// --------------------
// Core: Project & Auth
// --------------------
//

model Project {
  id         String   @id @default(cuid())
  name       String
  code       String?  @unique
  createdAt  DateTime @default(now())
  archivedAt DateTime?

  ifcModels IfcModel[]
  members  ProjectMember[]
  wbsLevelSettings WbsLevelSetting[]
  wbsAllowedValues WbsAllowedValue[]
  wbsAssignments WbsAssignment[]
  wbsAssignmentHistory WbsAssignmentHistory[]
  suppliers Supplier[]

  paramDefs    ElementParamDefinition[]
  paramValues  ElementParamValue[]
  paramHistory ElementParamHistory[]
  @@index([code])
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  name         String?
  createdAt    DateTime @default(now())

  sessions    Session[]
  memberships ProjectMember[]

  elementParamHistory ElementParamHistory[]
  wbsAssignmentHistory WbsAssignmentHistory[]

  platformRole PlatformRole @default(USER)
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  tokenHash String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model ProjectMember {
  projectId String
  userId    String
  role      ProjectRole

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([projectId, userId])
}

enum PlatformRole {
  PLATFORM_MANAGER
  USER
}

enum ProjectRole {
  OWNER
  ADMIN
  EDITOR
  VIEWER
}

//
// --------------------
// IFC Models & Elements (MIN METADATA)
// --------------------
//

model IfcModel {
  id        String   @id @default(uuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  label     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Versioning
  currentVersionId String? @unique
  currentVersion   IfcModelVersion? @relation("CurrentVersion", fields: [currentVersionId], references: [id])
  versions         IfcModelVersion[] @relation("ModelVersions")

  elements        ModelElement[]
  wbsAssignments WbsAssignment[]

  @@unique([projectId, label])
  @@index([projectId])
  @@index([projectId, label])
}

model IfcModelVersion {
  id        String   @id @default(uuid())

  modelId   String
  model     IfcModel @relation("ModelVersions", fields: [modelId], references: [id], onDelete: Cascade)
  currentFor IfcModel? @relation("CurrentVersion")

  version   Int
  fileName  String
  fileKey   String
  size      Int?
  createdAt DateTime @default(now())

  @@unique([modelId, version])
  @@index([modelId, createdAt])
}

model ModelElement {
  id       String @id @default(cuid())

  modelId  String
  model    IfcModel @relation(fields: [modelId], references: [id], onDelete: Cascade)

  guid     String   // IfcGlobalId

  ifcType   String
  name      String?
  typeName  String?
  category  String?

  createdAt DateTime @default(now())

  @@unique([modelId, guid])
  @@index([modelId])
  @@index([modelId, guid])
  @@index([ifcType])
  @@index([category])
}

//
// --------------------
// Domain: WBS & Suppliers
// --------------------
//


model WbsLevelSetting {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // es. "WBS0", "WBS6" (chiave logica del livello)
  levelKey  String

  enabled   Boolean @default(true)
  required  Boolean @default(false)
  sortIndex Int     @default(0)

  // mapping opzionale per import IFC (nome parametro/pset o chiave logica gestita dal frontend)
  ifcParamKey String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([projectId, levelKey])
  @@index([projectId, sortIndex])
}

model WbsAllowedValue {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  levelKey  String
  code      String
  name      String?
  sortIndex Int     @default(0)
  isActive  Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  assignments WbsAssignment[]

  @@unique([projectId, levelKey, code])
  @@index([projectId, levelKey])
  @@index([projectId, levelKey, sortIndex])
}

model WbsAssignment {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  modelId String
  model   IfcModel @relation(fields: [modelId], references: [id], onDelete: Cascade)

  guid     String
  levelKey String

  status WbsAssignmentStatus @default(VALID)

  allowedValueId String?
  allowedValue   WbsAllowedValue? @relation(fields: [allowedValueId], references: [id], onDelete: SetNull)

  // valorizzato quando status=INVALID (codice proveniente da IFC o input non ammesso)
  rawCode String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  history WbsAssignmentHistory[]

  @@unique([modelId, guid, levelKey])
  @@index([projectId, modelId])
  @@index([projectId, levelKey, status])
  @@index([projectId, modelId, levelKey])
}

model WbsAssignmentHistory {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  modelId String
  guid    String
  levelKey String


  assignmentId String?
  assignment   WbsAssignment? @relation(fields: [assignmentId], references: [id], onDelete: SetNull)

  oldStatus WbsAssignmentStatus?
  newStatus WbsAssignmentStatus?

  oldAllowedValueId String?
  newAllowedValueId String?

  oldRawCode String?
  newRawCode String?

  changedByUserId String
  changedBy       User @relation(fields: [changedByUserId], references: [id], onDelete: Restrict)

  source    WbsAssignmentSource @default(UI)
  changedAt DateTime @default(now())

  @@index([projectId, modelId, guid, levelKey, changedAt])
  @@index([projectId, levelKey, changedAt])
}



model Supplier {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  name     String
  code     String?
  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([projectId, name])
  @@index([projectId, isActive])
}

//
// --------------------
// Domain view per element (WBS assignment persisted)
// --------------------
//



//
// --------------------
// Aedera user-defined params (generic; stored by modelId+guid)
// --------------------
//

enum ElementParamType {
  STRING
  NUMBER
  BOOLEAN
  ENUM
  DATE
  JSON
  SUPPLIER
}

enum WbsAssignmentStatus {
  VALID
  INVALID
}

enum WbsAssignmentSource {
  UI
  IFC_IMPORT
  RULE
}


model ElementParamDefinition {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  key   String
  label String
  type  ElementParamType

  optionsJson Json?
  isActive    Boolean @default(true)
  isRequired  Boolean @default(false)
  isReadOnly  Boolean @default(false)
  isMulti     Boolean @default(false)

  ifcClassFilter String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  values  ElementParamValue[]
  history ElementParamHistory[]

  @@unique([projectId, key])
  @@index([projectId, isActive])
}

model ElementParamValue {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  modelId String
  guid    String

  definitionId String
  definition   ElementParamDefinition @relation(fields: [definitionId], references: [id], onDelete: Cascade)

  valueJson Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([modelId, guid, definitionId])
  @@index([projectId, definitionId])
  @@index([projectId, modelId, guid])
}

model ElementParamHistory {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  modelId String
  guid    String

  kind String

  definitionId String?
  definition   ElementParamDefinition? @relation(fields: [definitionId], references: [id], onDelete: SetNull)
  oldValueJson Json?
  newValueJson Json?

  changedByUserId String
  changedBy       User @relation(fields: [changedByUserId], references: [id], onDelete: Restrict)

  source    String   @default("UI")
  changedAt DateTime @default(now())

  @@index([projectId, modelId, guid, changedAt])
  @@index([projectId, kind, changedAt])
}
